{
  "protocolVersion": "1.0",
  "name": "饭来！",
  "description": "智能美食搜索助手，支持关键词搜索、地点定位、预算筛选，基于百度地图POI数据",
  "version": "3.0.0",
  "provider": {
    "url": "http://47.97.74.119:8080/a2a",
    "organization": "饭来美食助手"
  },
  "capabilities": {
    "streaming": false,
    "pushNotifications": false
  },
  "defaultInputModes": ["text"],
  "defaultOutputModes": ["text"],
  "skills": [
    {
      "id": "search",
      "name": "美食搜索",
      "description": "统一搜索接口，支持关键词、地点名称、预算筛选",
      "tags": ["food", "search", "recommendation"],
      "inputModes": ["text"],
      "outputModes": ["text"],
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "搜索关键词（菜系、餐厅名等）"
        },
        "location": {
          "type": "string",
          "required": false,
          "description": "坐标，高德格式：经度,纬度"
        },
        "location_name": {
          "type": "string",
          "required": false,
          "description": "地点名称（如新街口、南京大学），会自动转坐标"
        },
        "city": {
          "type": "string",
          "required": false,
          "description": "城市名称，默认南京"
        },
        "budget_max": {
          "type": "number",
          "required": false,
          "description": "预算上限（元）"
        }
      },
      "examples": [
        "搜索火锅",
        "新街口附近的日料",
        "南京大学周边50元以内的快餐",
        "找海底捞"
      ]
    }
  ],
  "supportedInterfaces": [
    {
      "url": "http://47.97.74.119:8080/a2a",
      "protocolBinding": "http"
    }
  ]
}
